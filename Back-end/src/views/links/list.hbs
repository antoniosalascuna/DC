<div class="container p-a">
    <div class="row">
        {{#each lista}}

        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <a href="{{url}}" target="_blank">
                        <h3 class="card-title text-uppercase">
                            {{tittle}}
                        </h3>
                    </a>

                    <p class="m-2">{{descripcion}}</p>
                    <p>Subido hace: {{timeago fecha_actual}}</p>
                    <a href="/links/delete/{{id}}" class="btn btn-danger">Eliminar</a>
                    <a href="/links/edit/{{id}}" class="btn btn-secondary">Editar</a>
                </div>
            </div>
        </div>
        {{else}}

        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No hay links agregados</p>
                <a href="/links/add">Agrega uno</a>
            </div>
        </div>

        {{/each}}
    </div>
</div>